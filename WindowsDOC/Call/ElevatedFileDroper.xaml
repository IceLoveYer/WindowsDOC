<Window
    x:Class="WindowsDOC.ElevatedFileDroper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WindowsDOC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="window"
    Title="ElevatedFileDroper"
    Width="400"
    Height="300"
    MinWidth="400"
    MinHeight="300"
    Background="{DynamicResource ColorBrushMain3}"
    Foreground="{DynamicResource ColorBrushMain1}"
    mc:Ignorable="d">
    <Grid>
        <Border
            Margin="5"
            BorderBrush="{Binding Foreground, ElementName=window}"
            BorderThickness="1"
            CornerRadius="5,5,5,5" />
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            Text="拖动文件至此" />
    </Grid>
</Window>
